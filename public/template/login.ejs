<div class="modal fade" id="login-model" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">登录</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon" id="sizing-addon2">用户名</span>
            <input type="text" class="form-control" name="username" placeholder="请输入用户名" aria-describedby="sizing-addon2">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon" id="sizing-addon2">密码</span>
            <input type="text" class="form-control" name="password" placeholder="请输入密码" aria-describedby="sizing-addon2">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-md-9 text-left text-danger alertInfo">
            <span class="glyphicon glyphicon-remove-circle hidden" aria-hidden="true"></span>
            <span class="hidden">用户名或密码错误</span>
          </div>
          <div class="col-md-3 text-right">
            <button type="button" class="btn btn-default" id="toLogin">登录</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>